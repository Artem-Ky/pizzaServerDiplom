@model IEnumerable<pizzaServerApp.Models.DefaultProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerType)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.IdNavigation)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.SizeProduct)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BannerType.Type)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.IdNavigation.Descr)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.SizeProduct.Size)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
